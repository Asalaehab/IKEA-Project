@model DepartmentEditViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center align-content-center">
    <h1 class="col-8" my-4>Create Department</h1>

    <form class="col-8" method="post" asp-controller="Department" asp-action="Create">
        <div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @*each form group contain input and label*@


            <partial name="PartialViews/_CreateEditPartialView" />

            <div class="mt-4 m-auto">
                <input class="btn btn-primary" type="submit" value="Create"/>
                <a class="btn btn-outline-dark " asp-controller="Department" asp-action="Index">Back To List </a>
            </div>
        </div>
    </form>

</div>





@section ValidationScripts{

    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
}

